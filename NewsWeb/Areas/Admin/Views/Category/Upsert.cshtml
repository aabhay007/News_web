@model NewsWeb.Models.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Category" : "New Category";

}
<form method="post">
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group ">
                <div class="col-4">


                    <label asp-for="Name"></label>
                </div>
                <div class="form-group">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group ">
         
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButtons" />
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" onclick="return ValData()" class="btn btn-info form-control" style="border-radius: 20px;">
                                    Save
                                </button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control" style="border-radius: 20px;">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    }
             
            </div>
        </div>
    </div>

</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

